{
  "name": "script-lab-react",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "copy-monaco": "cd packages/editor && yarn copy-monaco",
    "build": "cd packages/editor && yarn build && cd ../server && yarn build",
    "lint:tslint": "tslint \"src/**/*.ts?(x)\"",
    "lint:prettier": "prettier --list-different \"./**/*.ts?(x)\"",
    "lint:prettier-write": "prettier --write \"./**/*.ts?(x)\"",
    "lint": "yarn lint:tslint && yarn lint:prettier",
    "deploy": "node scripts/deploy.js",
    "editor": "cd packages/editor && yarn start",
    "server": "cd packages/server && yarn start",
    "start": "npm-run-all --parallel editor server"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "shelljs": "^0.8.2",
    "tslint": "^5.11.0",
    "prettier": "1.13.6"
  }
}

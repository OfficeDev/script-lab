{
  "name": "script-lab-react",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "yarn workspace editor postinstall",
    "build": "cd packages/editor && yarn build && cd ../server && yarn build",
    "prettier": "prettier --list-different \"./**/*.@(ts|tsx|js|jsx|html)\"",
    "prettier-write": "prettier --write \"./**/*.@(ts|tsx|js|jsx|html)\"",
    "deploy": "node scripts/deploy.js",
    "editor": "cd packages/editor && yarn start",
    "server": "cd packages/server && yarn start",
    "start": "npm-run-all --parallel editor server"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.2",
    "shelljs": "^0.8.2"
  }
}

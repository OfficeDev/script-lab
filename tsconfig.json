{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["es6", "dom", "es2020"],
    "sourceMap": true,
    "importHelpers": true, // importing helper functions from tslib
    "noEmitHelpers": true, // disable emitting inline helper functions

    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false, // until all the errors are fixed
    "noImplicitThis": true,
    "noImplicitAny": false, // until all the errors are fixed
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "strictNullChecks": false, // until all the errors are fixed
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true
  },
  "include": ["packages/common/src/interfaces/*"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "public",
    "**/*.stories.tsx"
  ]
}

{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Precompile script",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["scripts/precompile.ts"],
      "cwd": "${workspaceRoot}",
      "env": { "TS_NODE_PROJECT": "scripts/tsconfig.json" }
    },
    {
      "name": "Editor",
      "type": "chrome",
      "request": "launch",
      "url": "https://localhost:3000",
      "webRoot": "${workspaceRoot}/packages/editor/src",
      "userDataDir": "${workspaceRoot}/.vscode/chrome",
      "sourceMapPathOverrides": {
        "webpack:///packages/editor/src/*": "${webRoot}/*"
      }
    },
    {
      "name": "Runner",
      "type": "chrome",
      "request": "launch",
      "url": "https://localhost:3200",
      "webRoot": "${workspaceRoot}/packages/runner/src",
      "userDataDir": "${workspaceRoot}/.vscode/chrome",
      "sourceMapPathOverrides": {
        "webpack:///packages/runner/src/*": "${webRoot}/*"
      }
    }
  ]
}

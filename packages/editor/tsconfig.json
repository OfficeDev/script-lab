{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "typeRoots": [
      "../common/src/interfaces",
      "./src/interfaces",
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "skipLibCheck": true,
    "strict": false,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "alwaysStrict": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src/**/*",
    "../common/src/interfaces/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "public",
    "**/*.stories.tsx"
  ]
}

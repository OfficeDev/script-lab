{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "typeRoots": [
      "../common/src/interfaces",
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "outDir": "build/dist",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "allowJs": true
  },
  "include": [
    "./src/**/*",
    "../common/src/interfaces"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "public",
    "**/*.stories.tsx"
  ]
}

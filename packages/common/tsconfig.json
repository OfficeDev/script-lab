{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "typeRoots": [
      "./src/interfaces",
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2015"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "lib",
    "declaration": true,
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "alwaysStrict": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "declarationMap": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**/*",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "public",
    "**/*.stories.tsx",
    "**/.storybook/**",
    "lib"
  ]
}

{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true ,
    "strictFunctionTypes": true,         
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "typeRoots": [
      "../../node_modules/@types",
    ],
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*",
    "../common/src/interfaces/*"
  ],
}

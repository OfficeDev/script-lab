{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./" ,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true ,
    "strictFunctionTypes": true,         
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    
    "moduleResolution": "node",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "build", "scripts"]
}
